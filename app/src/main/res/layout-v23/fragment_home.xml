<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".ui.home.HomeFragment">


    <Button
        android:id="@+id/calculate"
        android:layout_width="77dp"
        android:layout_height="77dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="72dp"
        android:background="@drawable/shadow"
        android:foreground="@drawable/ic_caluculate"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/scrollView2"
        app:layout_constraintTop_toBottomOf="@+id/scrollView2"
        tools:targetApi="m" />

    <Button
        android:id="@+id/save"
        android:layout_width="77dp"
        android:layout_height="77dp"
        android:layout_marginEnd="52dp"
        android:background=""
        android:foreground="@drawable/ic_save"
        android:text="@string/save"
        app:layout_constraintEnd_toEndOf="@+id/scrollView2"
        app:layout_constraintTop_toTopOf="@+id/calculate" />

    <Button
        android:id="@+id/clear"
        android:layout_width="40dp"
        android:layout_height="56dp"
        android:layout_marginTop="136dp"
        android:background=""

        android:foreground="@drawable/ic_delete"
        android:textSize="18sp"
        android:textStyle="bold"
        android:windowSoftInputMode="adjustPan|adjustResize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.53"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView2" />

    <EditText

        android:id="@+id/sqfttotal"

        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="87dp"
        android:background="@drawable/rounded_darkgray"
        android:gravity="center_horizontal|center_vertical"
        android:hint="@string/sqft"
        android:importantForAutofill="no"
        android:inputType="numberDecimal"

        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:windowSoftInputMode="stateVisible|adjustResize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView2" />


    <EditText
        android:id="@+id/totalcost"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="39dp"
        android:background="@drawable/rounded_darkgray"
        android:gravity="center_horizontal|center_vertical"
        android:hint="@string/cost"
        android:importantForAutofill="no"
        android:inputType="numberDecimal"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView2" />

    <TextView


        android:id="@+id/text_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/amaranth_bold"
        android:text="@string/estimator"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="40sp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="8dp" />


    <EditText
        android:id="@+id/name"
        android:layout_width="300dp"
        android:layout_height="35dp"
        android:layout_below="@id/text_home"
        android:layout_marginTop="80dp"
        android:background="@drawable/rounded_gray"
        android:gravity="center_horizontal|center_vertical"
        android:hint="@string/name"
        android:importantForAutofill="no"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/phone"
        android:layout_width="300dp"
        android:layout_height="35dp"
        android:layout_below="@id/text_home"
        android:layout_marginTop="120dp"
        android:autofillHints=""
        android:background="@drawable/rounded_gray"
        android:gravity="center_vertical|center_horizontal"
        android:hint="@string/phone"
        android:inputType="textPhonetic|phone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="139dp"
        android:layout_height="28dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="165dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/rounded_green"
        android:fontFamily="@font/cabin_bold"
        android:gravity="center_horizontal|center_vertical"
        android:text="@string/Service"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/scrollView2"
        app:layout_constraintStart_toStartOf="@+id/scrollView2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="40dp"
        android:layout_height="28dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/rounded_green"
        android:fontFamily="@font/cabin_bold"
        android:gravity="center_horizontal|center_vertical"
        android:text="@string/ft01"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/textView"
        app:layout_constraintEnd_toStartOf="@+id/textView4" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="40dp"
        android:layout_height="28dp"
        android:layout_marginEnd="9dp"
        android:background="@drawable/rounded_green"
        android:fontFamily="@font/cabin_bold"
        android:gravity="center_horizontal|center_vertical"
        android:text="@string/sqft"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/textView"
        app:layout_constraintEnd_toStartOf="@+id/textView7" />

    <TextView

        android:id="@+id/textView7"
        android:layout_width="38dp"
        android:layout_height="28dp"
        android:layout_marginEnd="14dp"
        android:background="@drawable/rounded_green"
        android:fontFamily="@font/cabin_bold"
        android:gravity="center_horizontal|center_vertical"
        android:text="@string/cost"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="@+id/scrollView2" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="38dp"
        android:layout_height="28dp"
        android:layout_marginEnd="9dp"
        android:background="@drawable/rounded_green"
        android:gravity="center_horizontal|center_vertical"
        android:text="@string/ft0"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/textView"
        app:layout_constraintEnd_toStartOf="@+id/textView6" />

